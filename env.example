LINEAR_API_KEY=
RENDER_API_KEY=
# Optional: Filter to a specific workspace ID
# If not set, will track services across all accessible workspaces
RENDER_WORKSPACE_ID=
RENDER_BRANCH=main
LINEAR_TICKET_PREFIXES=DEV,BUG
# Optional: Webhook signing secret for verifying webhook authenticity
# Generate a secure random string and configure it in Render webhook settings
WEBHOOK_SECRET=
# Optional: GitHub token for fetching commit history from merge commits
# Required if you want to extract tickets from all commits in a merge (not just the merge commit)
# Create at: https://github.com/settings/tokens (no special permissions needed)
GITHUB_TOKEN=
DRY_RUN=true
DB_PATH=./render-linear-sync.db
PORT=3000
